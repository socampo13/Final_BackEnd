<div class="col-md-4 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h3>Nuevo producto</h3>
        </div>
        <div class="card-body">
            <form action="/productos/crear" method="POST">
                <div class="form-group">
                    <input type="text" name="title" class="form-control" placeholder="titulo" autofocus/>
                </div>
                <div class="form-group">
                    <textarea name="description" class="form-control" placeholder="Descripción"></textarea>
                </div>
                {{!-- Faltan los demás campos de ingreso de producto --}}
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>